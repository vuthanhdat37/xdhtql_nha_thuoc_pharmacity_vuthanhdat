@model web_quanlynhathuoc.Models.PhieuMuaHang

@{
    ViewData["Title"] = "Sửa Phiếu Mua Hàng";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">📝 Sửa Phiếu Mua Hàng</h2>

    <form asp-action="Edit" method="post" class="border rounded shadow-sm p-4 bg-light">
        <input type="hidden" asp-for="MaPMH_ID" />

        <div class="mb-3">
            <label class="form-label fw-bold">📅 Ngày mua hàng</label>
            <input asp-for="NgayMuaHang" type="date" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">👤 Khách hàng</label>
            <select asp-for="MaKH_ID" class="form-control" asp-items="@(new SelectList(ViewBag.KhachHangList, "MaKH_ID", "TenKH"))">
                <option value="">-- Chọn khách hàng --</option>
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">💳 Phương thức thanh toán</label>
            <select asp-for="PTThanhToan" class="form-control">
                <option value="">-- Chọn phương thức --</option>
                <option>Tiền mặt</option>
                <option>Chuyển khoản</option>
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">📌 Trạng thái</label>
            <select asp-for="TrangThai" class="form-control">
                <option value="">-- Chọn trạng thái --</option>
                <option>Đã thanh toán</option>
                <option>Chờ thanh toán</option>
            </select>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">💰 Tổng tiền</label>
            <input asp-for="TongTien" type="number" step="0.01" class="form-control" />
        </div>

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">
                💾 Cập nhật
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                ⬅️ Quay lại
            </a>
        </div>
    </form>
</div>
