@model web_quanlynhathuoc.Models.PhieuMuaHang

@{
    ViewData["Title"] = "Thêm Phiếu Mua Hàng";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0">➕ Thêm Phiếu Mua Hàng</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="form-group">
                    <label><strong>🗓️ Ngày mua hàng</strong></label>
                    <input asp-for="NgayMuaHang" type="date" class="form-control" />
                </div>

                <div class="form-group">
                    <label><strong>👤 Khách hàng</strong></label>
                    <select asp-for="MaKH_ID" class="form-control"
                            asp-items="@(new SelectList(ViewBag.KhachHangList, "MaKH_ID", "TenKH"))">
                        <option value="">-- Chọn khách hàng --</option>
                    </select>
                </div>

                <div class="form-group">
                    <label><strong>💳 Phương thức thanh toán</strong></label>
                    <select asp-for="PTThanhToan" class="form-control">
                        <option value="">-- Chọn phương thức --</option>
                        <option>Tiền mặt</option>
                        <option>Chuyển khoản</option>
                    </select>
                </div>

                <div class="form-group">
                    <label><strong>📌 Trạng thái</strong></label>
                    <select asp-for="TrangThai" class="form-control">
                        <option value="">-- Chọn trạng thái --</option>
                        <option>Đã thanh toán</option>
                        <option>Chờ thanh toán</option>
                    </select>
                </div>

                <div class="form-group">
                    <label><strong>💰 Tổng tiền</strong></label>
                    <input asp-for="TongTien" type="number" step="0.01" class="form-control" placeholder="VND" />
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">✅ Thêm mới</button>
                    <a asp-action="Index" class="btn btn-secondary">↩️ Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>
