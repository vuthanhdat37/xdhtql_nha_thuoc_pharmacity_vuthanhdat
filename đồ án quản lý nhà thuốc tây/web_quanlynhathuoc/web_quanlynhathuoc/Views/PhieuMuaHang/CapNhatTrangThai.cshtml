@model web_quanlynhathuoc.Models.PhieuMuaHang

@{
    ViewData["Title"] = "Cập nhật trạng thái";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0">⚙️ Cập nhật trạng thái - Phiếu #@Model.MaPMH_ID</h4>
        </div>
        <div class="card-body">
            <form asp-action="CapNhatTrangThai" method="post">
                <input type="hidden" name="id" value="@Model.MaPMH_ID" />

                <div class="form-group mb-3">
                    <label class="fw-bold">Trạng thái</label>
                    <select name="trangThai" class="form-control">
                        <option value="Đã thanh toán" selected="@(Model.TrangThai == "Đã thanh toán")">Đã thanh toán</option>
                        <option value="Chờ thanh toán" selected="@(Model.TrangThai == "Chờ thanh toán")">Chờ thanh toán</option>
                    </select>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">💾 Lưu</button>
                    <a asp-action="Index" class="btn btn-secondary">← Hủy</a>
                </div>
            </form>
        </div>
    </div>
</div>



