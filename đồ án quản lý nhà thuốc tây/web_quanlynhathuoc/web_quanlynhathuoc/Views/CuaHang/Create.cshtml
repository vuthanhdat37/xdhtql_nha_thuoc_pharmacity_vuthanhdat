@model web_quanlynhathuoc.Models.CuaHang
@{
    ViewData["Title"] = "Thêm cửa hàng";
}

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0">➕ Thêm cửa hàng mới</h4>
        </div>

        <div class="card-body">
            <div asp-validation-summary="All" class="alert alert-danger"></div>

            <form asp-action="Create" method="post">
                <div class="form-group mb-3">
                    <label for="TenCH">Tên cửa hàng</label>
                    <input asp-for="TenCH" class="form-control" />
                    <span asp-validation-for="TenCH" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label>Địa chỉ</label>
                    <input asp-for="DiaChi" class="form-control" />
                    <span asp-validation-for="DiaChi" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label>Số điện thoại</label>
                    <input asp-for="SDT" class="form-control" />
                    <span asp-validation-for="SDT" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label>Tiêu chuẩn GPP</label>
                    <input asp-for="TieuChuanGPP" class="form-control" />
                    <span asp-validation-for="TieuChuanGPP" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label>Cơ sở vật chất</label>
                    <input asp-for="CoSoVatChat" class="form-control" />
                    <span asp-validation-for="CoSoVatChat" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label>Hoạt động</label>
                    <input asp-for="HoatDongNhaThuoc" class="form-control" />
                    <span asp-validation-for="HoatDongNhaThuoc" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success">💾 Lưu</button>
                    <a asp-action="Index" class="btn btn-secondary">↩️ Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>
