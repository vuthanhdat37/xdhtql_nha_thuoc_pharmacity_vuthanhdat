@model web_quanlynhathuoc.Models.LoaiThuoc

<h2>Chỉnh sửa loại thuốc</h2>

<!-- Hiển thị lỗi tổng quát -->
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MaLoaiThuoc_ID" />

    <div class="form-group">
        <label>Tên loại thuốc</label>
        <input asp-for="TenLoaiThuoc" class="form-control" />
        <span asp-validation-for="TenLoaiThuoc" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Mã nhà cung cấp</label>
        <input asp-for="MaNCC_ID" class="form-control" />
        <span asp-validation-for="MaNCC_ID" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
