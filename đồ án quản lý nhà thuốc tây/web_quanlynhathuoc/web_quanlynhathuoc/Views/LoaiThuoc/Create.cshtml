@model web_quanlynhathuoc.Models.LoaiThuoc

@{
    ViewData["Title"] = "Thêm loại thuốc";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h4 class="mb-0">➕ Thêm loại thuốc mới</h4>
        </div>
        <div class="card-body">
            <!-- Hiển thị danh sách lỗi -->
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <form asp-action="Create" method="post">
                <div class="form-group mb-3">
                    <label class="font-weight-bold">Tên loại thuốc</label>
                    <input asp-for="TenLoaiThuoc" class="form-control" />
                    <span asp-validation-for="TenLoaiThuoc" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label class="font-weight-bold">Nhà cung cấp</label>
                    <select asp-for="MaNCC_ID" class="form-control" asp-items="ViewBag.NhaCungCapList">
                        <option value="">-- Chọn nhà cung cấp --</option>
                    </select>
                    <span asp-validation-for="MaNCC_ID" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-success px-4">💾 Thêm</button>
                    <a asp-action="Index" class="btn btn-secondary px-4">↩️ Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
