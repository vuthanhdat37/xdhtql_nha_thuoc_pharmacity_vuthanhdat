@model IEnumerable<dynamic>

<h2>Trạng thái tiêu chuẩn theo cửa hàng</h2>

<!-- ✅ Thêm nút ở đây -->
<a asp-action="ThemTrangThai" class="btn btn-success mb-3">➕ Thêm tiêu chuẩn mới</a>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Tên cửa hàng</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TenCH</td>
                <td>@item.TrangThai</td>
                <td>
                    <a class="btn btn-sm btn-warning"
                       asp-controller="TieuChuan"
                       asp-action="SuaTrangThai"
                       asp-route-maTC_ID="@item.MaTC_ID"
                       asp-route-maCH_ID="@item.MaCH_ID">
                        Sửa
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
