@model web_quanlynhathuoc.Models.CTTC

<h2>➕ Thêm tiêu chuẩn cho cửa hàng</h2>

<form asp-action="ThemTrangThai" method="post">
    <div class="form-group mb-3">
        <label>Cửa hàng</label>
        <select asp-for="MaCH_ID" asp-items="ViewBag.CuaHangList" class="form-control">
            <option value="">-- Chọn cửa hàng --</option>
        </select>
    </div>

    <div class="form-group mb-3">
        <label>Tiêu chuẩn</label>
        <select asp-for="MaTC_ID" asp-items="ViewBag.TieuChuanList" class="form-control">
            <option value="">-- Chọn tiêu chuẩn --</option>
        </select>
    </div>

    <div class="form-group mb-3">
        <label>Trạng thái</label>
        <select asp-for="TrangThai" class="form-control">
            <option>Đạt</option>
            <option>Đang đánh giá</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">✔️ Thêm</button>
    <a asp-action="Index" class="btn btn-secondary">⬅ Quay lại</a>
</form>
