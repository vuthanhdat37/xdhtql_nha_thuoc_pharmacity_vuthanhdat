@model web_quanlynhathuoc.Models.KhachHang
@{
    ViewData["Title"] = "Thêm khách hàng";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">🧑‍⚕️ Thêm khách hàng mới</h4>
        </div>

        <div class="card-body">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label>Tên khách hàng</label>
                    <input asp-for="TenKH" class="form-control" />
                    <span asp-validation-for="TenKH" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Giới tính</label>
                    <input asp-for="GioiTinh" class="form-control" />
                    <span asp-validation-for="GioiTinh" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Ngày sinh</label>
                    <input asp-for="NgaySinh" type="date" class="form-control" />
                    <span asp-validation-for="NgaySinh" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Số điện thoại</label>
                    <input asp-for="SDT" class="form-control" />
                    <span asp-validation-for="SDT" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label>Bệnh lý nền</label>
                    <input asp-for="BenhLyNen" class="form-control" />
                    <span asp-validation-for="BenhLyNen" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-success">💾 Lưu</button>
                <a asp-action="Index" class="btn btn-secondary ml-2">← Quay lại</a>
            </form>
        </div>
    </div>
</div>
