@model web_quanlynhathuoc.Models.NhanVien
@{
    ViewData["Title"] = "Chỉnh sửa nhân viên";
}
<h2>Chỉnh sửa nhân viên</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="MaNV_ID" />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label>Họ tên</label>
        <input asp-for="TenNV" class="form-control" />
    </div>

    <div class="form-group">
        <label>Giới tính</label>
        <input asp-for="GioiTinh" class="form-control" />
    </div>

    <div class="form-group">
        <label>Ngày sinh</label>
        <input asp-for="NgaySinh" type="date" class="form-control" />
    </div>

    <div class="form-group">
        <label>SĐT</label>
        <input asp-for="SDT" class="form-control" />
    </div>

    <div class="form-group">
        <label>Địa chỉ</label>
        <input asp-for="DiaChi" class="form-control" />
    </div>

    <div class="form-group">
        <label>Mã cửa hàng</label>
        <input asp-for="MaCH_ID" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
