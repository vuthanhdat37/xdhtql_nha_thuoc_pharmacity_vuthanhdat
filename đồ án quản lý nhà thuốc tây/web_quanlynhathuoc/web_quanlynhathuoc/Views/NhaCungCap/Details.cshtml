@model web_quanlynhathuoc.Models.NhaCungCap
@{
    ViewData["Title"] = "Chi tiết nhà cung cấp";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h4 class="mb-0">📋 Chi tiết nhà cung cấp</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">Tên nhà cung cấp</dt>
                <dd class="col-sm-9">@Model.TenNCC</dd>

                <dt class="col-sm-3 font-weight-bold">Địa chỉ</dt>
                <dd class="col-sm-9">@Model.DiaChi</dd>

                <dt class="col-sm-3 font-weight-bold">Số điện thoại</dt>
                <dd class="col-sm-9">@Model.SDT</dd>

                <dt class="col-sm-3 font-weight-bold">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>
            </dl>

            <h5 class="mt-4">💊 Các loại thuốc cung cấp</h5>
            @if (Model.LoaiThuocs != null && Model.LoaiThuocs.Any())
            {
                <table class="table table-striped table-bordered mt-2">
                    <thead class="thead-light">
                        <tr>
                            <th>Tên loại thuốc</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var loai in Model.LoaiThuocs)
                        {
                            <tr>
                                <td>@loai.TenLoaiThuoc</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted">Không có loại thuốc nào được ghi nhận cho nhà cung cấp này.</p>
            }

            <div class="mt-3">
                <a asp-action="Index" class="btn btn-secondary">← Quay lại danh sách</a>
            </div>
        </div>
    </div>
</div>
