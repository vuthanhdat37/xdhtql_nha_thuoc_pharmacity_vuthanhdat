@model IEnumerable<web_quanlynhathuoc.Models.NhaCungCap>
@{
    ViewData["Title"] = "Danh sách nhà cung cấp";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary mb-0">📦 Danh sách nhà cung cấp</h2>
        <a asp-action="Create" class="btn btn-success">
            ➕ Thêm nhà cung cấp
        </a>
    </div>

    <table class="table table-bordered table-hover shadow-sm">
        <thead class="thead-light text-center bg-light">
            <tr>
                <th>🏷️ Tên nhà cung cấp</th>
                <th>📍 Địa chỉ</th>
                <th>📞 SĐT</th>
                <th>📧 Email</th>
                <th style="width: 180px;">⚙️ Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="align-middle text-center">
                    <td class="text-left">@item.TenNCC</td>
                    <td class="text-left">@item.DiaChi</td>
                    <td>@item.SDT</td>
                    <td>@item.Email</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@item.MaNCC_ID" class="btn btn-sm btn-warning" title="Sửa">
                                ✏️
                            </a>
                            <a asp-action="Details" asp-route-id="@item.MaNCC_ID" class="btn btn-sm btn-info" title="Xem chi tiết">
                                🔍
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.MaNCC_ID" class="btn btn-sm btn-danger" title="Xoá" onclick="return confirm('Bạn chắc chắn muốn xóa nhà cung cấp này?');">
                                🗑️
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
