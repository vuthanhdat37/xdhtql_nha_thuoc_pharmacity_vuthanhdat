@model web_quanlynhathuoc.Models.CuaHang

<h2>Chỉnh sửa cửa hàng</h2>
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MaCH_ID" />
    <div class="form-group">
        <label>Tên cửa hàng</label>
        <input asp-for="TenCH" class="form-control" />
    </div>
    <div class="form-group">
        <label>Địa chỉ</label>
        <input asp-for="DiaChi" class="form-control" />
    </div>
    <div class="form-group">
        <label>Số điện thoại</label>
        <input asp-for="SDT" class="form-control" />
    </div>
    <div class="form-group">
        <label>Tiêu chuẩn GPP</label>
        <input asp-for="TieuChuanGPP" class="form-control" />
    </div>
    <div class="form-group">
        <label>Cơ sở vật chất</label>
        <input asp-for="CoSoVatChat" class="form-control" />
    </div>
    <div class="form-group">
        <label>Hoạt động</label>
        <input asp-for="HoatDongNhaThuoc" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Cập nhật</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
